generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(uuid())
  email     String        @unique
  firstname String
  lastname  String
  password  String
  username  String?       @unique
  phone     String?
  location  String?
  image     String?
  bio       String?
  status    UserStatus
  joinedAt  DateTime      @default(now())
  role      Role          @default(CUSTOMER)
}

model Vendor {
  id String @id
  name  String
  location String
  description String?
  image String?
  phone String?
  cancellation_policy String
  categoryID String
  category Category @relation(fields: [categoryID], references: [id])
  status AccountStatus
}

model Category{
  id String @id @default(uuid())
  name String @unique
  image String?
  vendors Vendor[]
}

enum Role {
  ADMIN
  VENDOR
  CUSTOMER
}
enum UserStatus {
  ACTIVE
  INACTIVE
}

enum AccountStatus {
  TRIAL_ACTIVE
  TRIAL_EXPIRING
  TRIAL_EXPIRED
  ACTIVE
  INACTIVE
}
